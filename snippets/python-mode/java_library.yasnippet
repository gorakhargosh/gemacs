# -*- mode: snippet -*-
# name: java_library build rule
# key: java_library
# expand-env: ((yas/indent-line 'fixed))
# --
java_library(
  name = '${1:name}',
  srcs = glob(['${2:*.java}']),
  srcs = [$3],
  deps = [$0],
)

python_binary(
  name = 'tailer',
  main = 'tailer.py',
  deps = [
    ':tailerutils',
  ],
)

python_library(
  name = 'tailerutils',
  srcs = glob(['*.py'], excludes = ['tailer.py']),
)